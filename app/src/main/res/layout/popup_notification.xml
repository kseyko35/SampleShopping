<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    android:padding="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/titleDialogTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Follow Product"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descDialogTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="When price change, you will notify by app"
            android:textAlignment="center"
            android:textStyle="normal" />

        <RadioGroup
            android:layout_gravity="center"
            android:id="@+id/toggle"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="70dp"
            android:layout_height="30dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/pink_out_line"
            android:checkedButton="@+id/offer"
            android:orientation="horizontal">


            <RadioButton
                android:padding="4dp"
                android:id="@+id/selectSideBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:gravity="center"
                android:checked="true"
                android:text="Select Price"/>

            <RadioButton
                android:padding="4dp"
                android:id="@+id/autoSideBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:gravity="center"
                android:text="Auto" />
        </RadioGroup>
        <LinearLayout
            android:id="@+id/priceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/priceTxt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border_textview"
            android:padding="8dp"
            android:text="0 â‚¬"
            android:textAlignment="center" />

            <SeekBar
                android:id="@+id/priceSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:max="1000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/closeBtn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:text="Close"
                android:background="@android:color/transparent"
                android:textColor="@color/teal_700" />

            <TextView
                android:id="@+id/okeyBtn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Okey"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/teal_700" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>